mixin form()
	+b.FORM.form&attributes(attributes)
		block

mixin inputbox()
	+b.inputbox&attributes(attributes)
		block

mixin label()
	+e.P.label&attributes(attributes)
		block

mixin input-wrapper()
	+e.wrapper&attributes(attributes)
		block

mixin input()
	+b.INPUT.input&attributes(attributes)

mixin button()
	+b.BUTTON.button&attributes(attributes)
		block

mixin textarea()
	+b.TEXTAREA.textarea&attributes(attributes)
		block

mixin checkradio(isRadio, name, value, checked, required)
	+b.LABEL.checkradio.__checkradio
		+e.INPUT.input(name=name, value=value, checked=checked, type=(isRadio ? "radio" : "checkbox"), required=(required || false))&attributes(attributes)
		+e.SPAN.box
		+e.SPAN.content
			block
